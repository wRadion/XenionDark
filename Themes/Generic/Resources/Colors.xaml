<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Colors -->
    <Color x:Key="Color.Darkest" R="8" G="8" B="8" A="255" />
    <Color x:Key="Color.Darker" R="16" G="16" B="16" A="255" />
    <Color x:Key="Color.Dark" R="24" G="24" B="24" A="255" />
    <Color x:Key="Color.Light" R="164" G="164" B="164" A="255" />
    <Color x:Key="Color.Lighter" R="196" G="196" B="196" A="255" />
    <Color x:Key="Color.Lightest" R="224" G="224" B="224" A="255" />

    <Color x:Key="Color.Red" R="196" G="32" B="32" A="255" />

    <!-- Brushes -->
    <SolidColorBrush x:Key="Brush.Darkest" Color="{StaticResource Color.Darkest}" Opacity="1" />
    <SolidColorBrush x:Key="Brush.Darker" Color="{StaticResource Color.Darker}" Opacity="1" />
    <SolidColorBrush x:Key="Brush.Dark" Color="{StaticResource Color.Dark}" Opacity="1" />
    <SolidColorBrush x:Key="Brush.Light" Color="{StaticResource Color.Light}" Opacity="1" />
    <SolidColorBrush x:Key="Brush.Lighter" Color="{StaticResource Color.Lighter}" Opacity="1" />
    <SolidColorBrush x:Key="Brush.Lightest" Color="{StaticResource Color.Lightest}" Opacity="1" />

    <SolidColorBrush x:Key="Brush.Red" Color="{StaticResource Color.Red}" Opacity="1" />

</ResourceDictionary>
